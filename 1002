import java.io.IOException;
import java.util.Scanner;
public class URI 1002{
    
    public static void main(String[] args) throws IOException {
        Scanner in; 
        double raio;
        double pi = 3.14159;
        double area;
        
        in= new Scanner(System.in);
        raio = in.nextDouble();
        in.close();
        
        area = pi*raio*raio;
        
        System.out.printf("A=%.4f\n", area);
    
    }
}